# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Indentation override for all JS
[*.js]
charset = utf-8
indent_style = space
indent_size = 4

# Indentation override for all JS, SCSS
[*.json, *.scss]
charset = utf-8
indent_style = space
indent_size = 2

# Indentation override for all HtML
[*.html]
charset = utf-8
indent_style = space
indent_size = 4

# Matches the exact files package.json
[{package.json}]
indent_style = space
indent_size = 2
